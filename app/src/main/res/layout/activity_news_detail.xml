<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_parent"
    style="@style/MM"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        style="@style/LL_MM_V"
        android:gravity="center_horizontal">

        <LinearLayout
            style="@style/LL_MW_H"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                style="@style/PARENT_TITLE"
                android:layout_marginTop="@dimen/dp_0"
                android:layout_weight="1"
                android:text="@string/label_employee"/>

            <ImageView
                android:id="@+id/img_close"
                style="@style/WW"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/close_circle_dark"/>
        </LinearLayout>

        <View
            style="@style/PARENT_DIVIDER"/>

        <ScrollView
            style="@style/MW">

            <LinearLayout
                style="@style/LL_MW_V">

                <LinearLayout
                    style="@style/LL_MW_H"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dp_12">

                    <bi.bigroup.life.views.RoundedImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_52"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_13"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_avatar"
                        app:radius_width="@dimen/dp_11"/>

                    <LinearLayout
                        style="@style/LL_MM_V"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <bi.bigroup.life.views.fonts.TextViewRobotoMedium
                            android:id="@+id/tv_surname"
                            style="@style/MW"
                            android:text="Фамилия"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"/>

                        <bi.bigroup.life.views.fonts.TextViewRobotoMedium
                            android:id="@+id/tv_firstname"
                            style="@style/MW"
                            android:layout_marginTop="@dimen/dp_4_ngtv"
                            android:text="Имя"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_call"
                        style="@style/WW"
                        android:src="@drawable/phone_active"/>
                </LinearLayout>

                <View
                    style="@style/PARENT_DIVIDER"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="@string/specialty"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_specialty"
                    style="@style/extra_info_value"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:text="Главный бухгалтер Сервисной службы"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="@string/login"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_login"
                    style="@style/extra_info_value"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:text="max"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="@string/manager"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_manager"
                    style="@style/extra_info_value"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:text="Нугманова Айлида Рашидовна"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="@string/label_phone"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_phone"
                    style="@style/extra_info_value"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:text="+7 771 777 77 77"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="@string/email"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_email"
                    style="@style/extra_info_value"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:text="some@gmail.com"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        android:id="@+id/pb_indicator"
        layout="@layout/inc_pb_opaque"/>

</FrameLayout>