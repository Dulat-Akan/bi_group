<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/LL_MW_V">

    <LinearLayout
        android:id="@+id/ll_row"
        style="@style/LL_MW_H"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_17">

        <LinearLayout
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/view_selector_rounded_option"/>

        <LinearLayout
            style="@style/LL_MW_V"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_weight="1">

            <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                android:id="@+id/tv_title"
                style="@style/MW"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:text="Yeapta"/>

            <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                android:id="@+id/tv_description"
                style="@style/MW"
                android:textColor="@color/item_description"
                android:textSize="@dimen/sp_12"
                tools:text="Text"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:src="@drawable/arrow_up_right"/>

    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5_divider"
        android:layout_marginLeft="@dimen/dp_69"
        android:background="@color/divider"/>

</LinearLayout>