<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_content"
              style="@style/LL_MW_V"
              android:padding="@dimen/dp_15">

    <LinearLayout
        android:id="@+id/ll_row"
        style="@style/LL_MW_H"
        android:gravity="center_vertical">

        <LinearLayout
            style="@style/LL_MW_V"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title"
                style="@style/MW"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:maxLines="1"
                android:text="Type something notification"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"/>

            <bi.bigroup.life.views.fonts.TextViewOpenSansNeueRegular
                android:id="@+id/tv_time"
                style="@style/MW"
                android:text="5 minutes ago"
                android:textColor="@color/item_description"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/view_selector_rounded_option_gray"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_11"
        android:background="@color/divider"/>

</LinearLayout>