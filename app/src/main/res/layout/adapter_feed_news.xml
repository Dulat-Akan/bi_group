<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_content"
              style="@style/LL_MW_V">

    <android.support.v7.widget.CardView
        style="@style/feed_cardview">

        <LinearLayout
            style="@style/LL_MW_V">

            <include
                layout="@layout/mrg_feed_user_block"/>

            <ImageView
                android:id="@+id/img_slider"
                style="@style/MW"
                android:layout_marginTop="@dimen/dp_6"
                android:adjustViewBounds="true"
                android:background="@color/slider_img_bg"
                android:maxHeight="@dimen/dp_320"
                android:minHeight="@dimen/dp_170"
                android:scaleType="fitXY"/>

            <!--<bi.bigroup.life.views.ViewPagerWrapContent-->
            <!--android:id="@+id/vp_images"-->
            <!--style="@style/MW"-->
            <!--android:minHeight="@dimen/dp_170"/>-->

            <!--<bi.bigroup.life.views.circle_page_indicator.CirclePageIndicator-->
            <!--android:id="@+id/ci_images"-->
            <!--style="@style/MW"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="@dimen/dp_6"-->
            <!--app:fillColor="@color/pager_indicator_fill"-->
            <!--app:pageColor="@color/pager_indicator_unselected"-->
            <!--app:radius="@dimen/dp_4"/>-->

            <LinearLayout
                style="@style/LL_MW_H"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_12">

                <LinearLayout
                    android:id="@+id/ll_like"
                    style="@style/WW"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_like"
                        style="@style/WW"
                        android:src="@drawable/like_inactive"/>

                    <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                        android:id="@+id/tv_like_quantity"
                        style="@style/WW"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:textColor="@color/feed_time"
                        android:textSize="@dimen/sp_12"
                        tools:text="423"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_comment"
                    style="@style/WW"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:src="@drawable/chat_inactive"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_comment_quantity"
                    style="@style/MW"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_weight="1"
                    android:textColor="@color/feed_time"
                    android:textSize="@dimen/sp_12"
                    tools:text="423"/>

                <ImageView
                    android:id="@+id/img_views"
                    style="@style/WW"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:src="@drawable/view"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_view_quantity"
                    style="@style/WW"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:textColor="@color/feed_time"
                    android:textSize="@dimen/sp_12"
                    tools:text="423"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>