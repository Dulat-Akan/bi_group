<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <bi.bigroup.life.views.fonts.TextViewRobotoMedium
        android:id="@+id/tv_title"
        style="@style/MW"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        tools:text="Sudheads text"/>

    <LinearLayout
        style="@style/LL_MW_H"
        android:layout_marginTop="@dimen/dp_7"
        android:gravity="center_vertical">

        <bi.bigroup.life.views.fonts.TextViewRobotoRegular
            android:id="@+id/tv_variant_title"
            style="@style/MW"
            android:layout_weight="1"
            android:textColor="@color/variant_title"
            android:textSize="@dimen/sp_14"
            tools:text="@string/choose_variant"/>

        <bi.bigroup.life.views.fonts.TextViewRobotoRegular
            android:id="@+id/tv_out_of_questions"
            style="@style/WW"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/feed_time"
            android:textSize="@dimen/sp_14"
            tools:text="@string/out_of_questions"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_variants"
        style="@style/LL_MW_V"
        android:layout_marginTop="@dimen/dp_15">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment_input"
        style="@style/LL_MW_V"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/et_selector_rounded_add_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_content"
            style="@style/MW"
            android:gravity="top|left"
            android:hint="@string/write_comment"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:paddingBottom="@dimen/dp_7"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:paddingTop="@dimen/dp_7"
            android:textColorHint="@color/et_hint_subject"
            android:textSize="@dimen/sp_14"
            app:met_hideUnderline="true"/>
    </LinearLayout>

    <LinearLayout
        style="@style/LL_MW_H"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">

        <ImageView
            style="@style/WW"
            android:src="@drawable/poll"/>

        <bi.bigroup.life.views.fonts.TextViewRobotoRegular
            android:id="@+id/tv_poll_quantity"
            style="@style/WW"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/feed_time"
            android:textSize="@dimen/sp_12"
            tools:text="@string/label_votes"/>

    </LinearLayout>


</LinearLayout>