<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fl_parent"
             style="@style/MM">

    <LinearLayout
        android:id="@+id/ll_content"
        style="@style/LL_MM_V"
        android:background="@color/main_bg">

        <LinearLayout
            android:id="@+id/ll_profile"
            style="@style/LL_MW_H"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_12">

            <bi.bigroup.life.views.RoundedImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_43"
                android:layout_marginBottom="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_13"
                android:scaleType="centerCrop"
                android:src="@color/user_avatar"
                app:radius_width="@dimen/dp_11"/>

            <LinearLayout
                style="@style/LL_MM_V"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <bi.bigroup.life.views.fonts.TextViewRobotoBold
                    android:id="@+id/tv_name"
                    style="@style/MW"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    tools:text="User Name"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_username"
                    style="@style/MW"
                    android:textColor="@color/personal"
                    android:textSize="@dimen/sp_12"
                    tools:text="Personal"/>

            </LinearLayout>

            <ImageView
                style="@style/WW"
                android:src="@drawable/arrow_up_right"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_MM_V"
            android:background="@color/main_bg">

            <include
                android:id="@+id/v1"
                layout="@layout/inc_item_menu"/>

            <include
                android:id="@+id/v2"
                layout="@layout/inc_item_menu"/>

            <include
                android:id="@+id/v3"
                layout="@layout/inc_item_menu"/>

            <include
                android:id="@+id/v4"
                layout="@layout/inc_item_menu"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@color/divider"/>

            <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                android:id="@+id/tv_logout"
                style="@style/MW"
                android:layout_height="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_12"
                android:gravity="center_vertical"
                android:text="@string/logout"
                android:background="?android:selectableItemBackground"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>

        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/pb_indicator"
        layout="@layout/inc_pb_transparent"/>
</FrameLayout>