<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_content"
              style="@style/LL_MW_V"
              android:padding="@dimen/dp_15">

    <bi.bigroup.life.views.fonts.TextViewRobotoMedium
        android:id="@+id/tv_question_name"
        style="@style/MW"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        tools:text="@string/lorem_ipsum_short_2"/>

    <LinearLayout
        android:id="@+id/ll_row"
        style="@style/LL_MW_V"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">

    </LinearLayout>

    <LinearLayout
        style="@style/LL_MW_H"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">

        <ImageView
            style="@style/WW"
            android:src="@drawable/poll"/>

        <bi.bigroup.life.views.fonts.TextViewRobotoRegular
            android:id="@+id/tv_poll_quantity"
            style="@style/WW"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/feed_time"
            android:textSize="@dimen/sp_12"
            tools:text="423"/>

    </LinearLayout>
</LinearLayout>