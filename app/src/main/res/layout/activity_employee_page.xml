<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_parent"
    style="@style/MM"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        style="@style/LL_MM_V"
        android:gravity="center_horizontal">

        <LinearLayout
            style="@style/LL_MW_H"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical">

            <bi.bigroup.life.views.fonts.TextViewRobotoMedium
                style="@style/PARENT_TITLE"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_0"
                android:layout_weight="1"
                android:text="@string/label_employee"/>

            <ImageView
                android:id="@+id/img_close"
                style="@style/WW"
                android:layout_marginRight="@dimen/dp_26"
                android:src="@drawable/close_circle_dark"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_13"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@color/divider2"/>

        <ScrollView
            style="@style/MW"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24">

            <LinearLayout
                style="@style/LL_MW_V">

                <LinearLayout
                    style="@style/LL_MW_H"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/ll_avatar_container"
                        style="@style/WW"
                        android:background="@drawable/ll_avatar_rounded_border_14dp">

                        <bi.bigroup.life.views.RoundedImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="@dimen/dp_72"
                            android:layout_height="@dimen/dp_72"
                            android:src="@drawable/ic_user"
                            app:radius_width="@dimen/dp_14"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LL_MM_V"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <bi.bigroup.life.views.fonts.TextViewRobotoMedium
                            android:id="@+id/tv_surname"
                            style="@style/MW"
                            android:text="Фамилия"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"/>

                        <bi.bigroup.life.views.fonts.TextViewRobotoMedium
                            android:id="@+id/tv_firstname"
                            style="@style/MW"
                            android:layout_marginTop="@dimen/dp_4_ngtv"
                            android:text="Имя"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_call"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@drawable/phone_active"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_13"
                    android:layout_marginTop="@dimen/dp_25"
                    android:background="@color/divider2"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/specialty"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_specialty"
                    style="@style/extra_info_value"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:text="Главный бухгалтер Сервисной службы"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/administrative_manager"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_administrative_manager"
                    style="@style/extra_info_value"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:text="max"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/functional_manager"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_functional_manager"
                    style="@style/extra_info_value"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:text="Нугманова Айлида Рашидовна"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/label_phone"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_phone"
                    style="@style/extra_info_value"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    tools:text="+7 771 777 77 77"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/date_of_birthday"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_dob"
                    style="@style/extra_info_value"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    tools:text="13 february"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    style="@style/extra_info_label"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/email"/>

                <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                    android:id="@+id/tv_email"
                    style="@style/extra_info_value"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    tools:text="some@gmail.com"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        style="@style/WW"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24">

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/fb_share"
            style="@style/WW"
            app:fab_colorNormal="@color/float_menu_default"
            app:fab_colorPressed="@color/float_menu_default"
            app:fab_icon="@drawable/ic_share"
            app:fab_plusIconColor="@color/float_menu_default"
            app:fab_size="normal"/>

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_1"
            android:src="@drawable/ic_share"/>

    </FrameLayout>

    <include
        android:id="@+id/pb_indicator"
        layout="@layout/inc_pb_opaque"/>


    <include
        layout="@layout/merge_view_photo"/>

</FrameLayout>