<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/LL_MW_V">

    <LinearLayout
        android:id="@+id/ll_row"
        style="@style/LL_MW_H"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12">

        <bi.bigroup.life.views.RoundedImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@color/user_avatar"
            app:radius_width="@dimen/dp_8"/>

        <LinearLayout
            style="@style/LL_MW_V"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_weight="1">

            <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                android:id="@+id/tv_fullname"
                style="@style/MW"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:text="Фамилия Имя"/>

            <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                android:id="@+id/tv_specialty"
                style="@style/MW"
                android:textColor="@color/feed_time"
                android:textSize="@dimen/sp_12"
                tools:text="Должность"/>

            <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                android:id="@+id/tv_birthday"
                style="@style/MW"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/feed_time"
                android:textSize="@dimen/sp_12"
                tools:text="birthday"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_rounded"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:src="@drawable/ic_bd_active"/>

        <ImageView
            android:id="@+id/img_arrow"
            style="@style/WW"
            android:src="@drawable/arrow_up_right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_13"
        android:layout_marginLeft="@dimen/dp_58"
        android:background="@color/divider2"/>

</LinearLayout>