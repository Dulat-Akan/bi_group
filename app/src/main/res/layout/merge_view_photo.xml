<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/user_photo_container"
        style="@style/MM"
        android:background="@color/photo_pager_window_bg"
        android:visibility="invisible">

        <LinearLayout
            style="@style/MM">

            <bi.bigroup.life.views.SquareImageView
                android:id="@+id/img_expanded"
                style="@style/MM"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@color/photo_pager_window_bg"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <bi.bigroup.life.views.fonts.TextViewRobotoRegular
            android:id="@+id/img_full_close"
            style="@style/WW"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_60"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"/>
    </RelativeLayout>
</merge>