<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/fl_parent"
             style="@style/MM"
             android:background="@color/white">

    <RelativeLayout
        style="@style/MM">

        <LinearLayout
            style="@style/LL_MM_V"
            android:fitsSystemWindows="true">

            <LinearLayout
                style="@style/LL_MW_H"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical">

                <bi.bigroup.life.views.fonts.TextViewRobotoMedium
                    style="@style/PARENT_TITLE"
                    android:layout_marginTop="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="@string/title_task_sdesk"/>

                <ImageView
                    android:id="@+id/img_close"
                    style="@style/WW"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/close_circle_dark"/>
            </LinearLayout>

            <View
                style="@style/PARENT_DIVIDER"
                android:layout_marginBottom="@dimen/dp_5"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                app:tabMode="fixed"
                style="@style/customTabLayout"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                style="@style/MW"
                android:layout_marginTop="@dimen/dp_20"/>

        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/pb_indicator"
        layout="@layout/inc_pb_transparent"/>

</FrameLayout>

