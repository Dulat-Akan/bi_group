<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/LL_MW_V">

    <LinearLayout
        android:id="@+id/ll_enter_text"
        style="@style/LL_MW_V"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_15"
        tools:background="@color/green">

        <bi.bigroup.life.views.edittext.SettingsEditText
            android:id="@+id/et_msg"
            style="@style/MW"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="@string/dob_congrats_msg"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:textColor="@color/black"
            android:textColorHint="@color/et_hint_secondary"
            android:textSize="@dimen/sp_14"
            app:met_hideUnderline="true"
            app:met_textColorHint="@color/et_hint_secondary"/>

        <bi.bigroup.life.views.fonts.ButtonRobotoRegular
            android:id="@+id/btn_send_comment"
            style="@style/WW"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/dp_5"
            android:layout_height="@dimen/dp_33"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:layout_gravity="right"
            android:background="@drawable/btn_selector_blue_rounded"
            android:text="@string/send"/>
    </LinearLayout>

</LinearLayout>