<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/LL_MW_V">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_72"
        android:background="@color/divider"/>

    <LinearLayout
        android:id="@+id/ll_row"
        style="@style/LL_MW_H"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">

        <bi.bigroup.life.views.RoundedImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/ic_avatar"
            app:radius_width="@dimen/dp_8"/>

        <LinearLayout
            style="@style/LL_MW_V"
            android:layout_marginLeft="@dimen/dp_18">

            <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                android:id="@+id/tv_title"
                style="@style/MW"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:text="BI Group марафон"/>

            <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                android:id="@+id/tv_description"
                style="@style/MW"
                android:textColor="@color/feed_time"
                android:textSize="@dimen/sp_12"
                tools:text="Интуит от 2018"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>