<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/LL_MW_V"
              android:paddingBottom="@dimen/dp_6"
              android:paddingLeft="@dimen/dp_15"
              android:paddingRight="@dimen/dp_15"
              android:paddingTop="@dimen/dp_6"
              android:orientation="vertical">

    <LinearLayout
        style="@style/LL_WW_H"
        android:gravity="center_vertical">

        <bi.bigroup.life.views.RoundedImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:src="@color/bricks_gallery"
            app:radius_width="@dimen/dp_6"/>

        <bi.bigroup.life.views.fonts.TextViewRobotoMedium
            android:id="@+id/tv_user_fullname"
            style="@style/WW"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            tools:text="Jack Daniels"/>

        <bi.bigroup.life.views.fonts.TextViewRobotoRegular
            android:id="@+id/tv_time"
            style="@style/MW"
            android:layout_marginLeft="@dimen/dp_11"
            android:textColor="@color/feed_time"
            android:textSize="@dimen/sp_12"
            tools:text="5 минут назад"/>
    </LinearLayout>

    <bi.bigroup.life.views.fonts.TextViewRobotoRegular
        android:id="@+id/tv_content"
        style="@style/MW"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        tools:text="@string/lorem_ipsum_short"/>

    <LinearLayout
        style="@style/LL_MW_H"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_like"
            style="@style/WW"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_like"
                style="@style/WW"
                android:src="@drawable/like_inactive"/>

            <bi.bigroup.life.views.fonts.TextViewRobotoRegular
                android:id="@+id/tv_like_quantity"
                style="@style/WW"
                android:layout_marginLeft="@dimen/dp_3"
                android:textColor="@color/feed_time"
                android:textSize="@dimen/sp_12"
                tools:text="423"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_comment"
            style="@style/WW"
            android:layout_marginLeft="@dimen/dp_11"
            android:src="@drawable/chat_inactive"
            android:visibility="gone"/>

        <bi.bigroup.life.views.fonts.TextViewRobotoRegular
            android:id="@+id/tv_comment_quantity"
            style="@style/MW"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight="1"
            android:text="@string/has_answer"
            android:textColor="@color/feed_time"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>