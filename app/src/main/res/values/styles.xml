<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomImageGallery" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/black_transparent</item>
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/transparent</item>
        <item name="colorControlHighlight">@color/transparent</item>
        <item name="android:textColorPrimary">@color/transparent</item>
        <item name="android:textColorSecondary">@color/transparent</item>
    </style>

    <!-- WIDTH HEIGHT -->
    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- LinearLayout custom height & width-->
    <style name="LL_MW_H" parent="MW">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MW_V" parent="MW">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WM_V" parent="WM">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WM_H" parent="WM">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MM_H" parent="MM">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MM_V" parent="MM">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WW_V" parent="WW">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WW_H" parent="WW">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- activity_auth -->
    <style name="ic_auth_logo" parent="WW">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_version_logo</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/et_hint_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/et_hint</item>
        <item name="colorControlNormal">@color/et_hint</item>
        <item name="colorControlActivated">@color/et_hint</item>
    </style>

    <style name="et_auth" parent="MW">
        <item name="android:background">@color/white</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_marginLeft">@dimen/dp_28</item>
        <item name="android:layout_marginRight">@dimen/dp_28</item>
        <item name="android:textCursorDrawable">@drawable/shape_auth_cursor_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/et_hint</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="met_hideUnderline">true</item>
        <item name="met_textColor">@color/black</item>
        <item name="met_textColorHint">@color/et_hint</item>
    </style>

    <style name="auth_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/et_divider</item>
    </style>

    <style name="auth_rounded_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/btn_selector_blue_rounded</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabIndicatorHeight">@dimen/dp_2</item>
        <item name="tabTextColor">@color/tab_text</item>
        <item name="tabMode">scrollable</item>
        <item name="tabBackground">@color/main_bg</item>
        <item name="tabTextAppearance">@style/MineCustomTabText</item>
        <item name="android:textAllCaps">true</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="back_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/toolbar_bg</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIcon">@drawable/back</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- ProfileActivity -->
    <style name="subject_label" parent="MW">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="extra_info_label" parent="MW">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/specialty</item>
    </style>

    <style name="extra_info_value" parent="MW">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PARENT_TITLE" parent="MW">
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PARENT_DIVIDER" parent="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0_5_divider</item>
        <item name="android:layout_margin">@dimen/dp_15</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- FeedFragment -->
    <style name="feed_cardview" parent="MW">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/dp_14</item>
        <item name="cardElevation">@dimen/dp_8</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_6</item>
    </style>

    <!-- TasksSdeskActivity -->
    <style name="menu_labels_style">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="fb_sub_menu" parent="WW">
        <item name="fab_colorNormal">@color/float_menu_default</item>
        <item name="fab_colorPressed">@color/float_menu_click</item>
        <item name="fab_icon">@drawable/ic_plus</item>
        <item name="fab_size">mini</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/et_border</item>
        <item name="android:textColorSecondary">@color/et_border</item>
    </style>

    <style name="AutoComplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="colorControlNormal">@color/et_hint_subject</item>
        <item name="colorControlActivated">@color/et_hint_subject</item>
    </style>
</resources>
