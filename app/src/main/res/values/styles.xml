<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- WIDTH HEIGHT -->
    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- LinearLayout custom height & width-->
    <style name="LL_MW_H" parent="MW">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MW_V" parent="MW">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WM_V" parent="WM">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WM_H" parent="WM">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MM_H" parent="MM">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MM_V" parent="MM">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WW_V" parent="WW">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WW_H" parent="WW">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- activity_auth -->
    <style name="ic_auth_logo" parent="WW">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_version_logo</item>
    </style>

    <style name="et_auth" parent="MW">
        <item name="android:background">@color/white</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_marginLeft">@dimen/dp_28</item>
        <item name="android:layout_marginRight">@dimen/dp_28</item>
        <item name="android:textCursorDrawable">@drawable/shape_auth_cursor_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/et_hint</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="met_hideUnderline">true</item>
        <item name="met_textColor">@color/black</item>
        <item name="met_textColorHint">@color/et_hint</item>
    </style>

    <style name="auth_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/et_divider</item>
    </style>

    <style name="auth_rounded_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/btn_selector_blue_rounded</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/toolbar_bg</item>
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabIndicatorHeight">@dimen/dp_2</item>
        <item name="tabTextColor">@color/tab_text</item>
        <item name="tabMode">scrollable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="back_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/toolbar_bg</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIcon">@drawable/back</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- ProfileActivity -->
    <style name="subject_label" parent="MW">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">@dimen/sp_8</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="extra_info_label" parent="MW">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/specialty</item>
    </style>

    <style name="extra_info_value" parent="MW">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PARENT_TITLE" parent="MW">
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- FeedFragment -->
    <style name="feed_cardview" parent="MW">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/dp_10</item>
        <item name="cardElevation">@dimen/dp_3</item>
        <item name="android:layout_marginLeft">@dimen/dp_18</item>
        <item name="android:layout_marginRight">@dimen/dp_18</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
        <item name="android:layout_marginBottom">@dimen/dp_6</item>
    </style>
</resources>
