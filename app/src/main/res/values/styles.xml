<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- WIDTH HEIGHT -->
    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- LinearLayout custom height & width-->
    <style name="LL_MW_H" parent="MW">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MW_V" parent="MW">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WM_V" parent="WM">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WM_H" parent="WM">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MM_H" parent="MM">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MM_V" parent="MM">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WW_V" parent="WW">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LL_WW_H" parent="WW">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
